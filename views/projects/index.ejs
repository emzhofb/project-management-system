<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
      integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('../partials/navigation') %>
    <div class="container" style="padding: 20px">
      <h2>Filters</h2>
      <form action="/projects">
        <div class="container">
          <div class="row">
            <div class="col-sm-2">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  name="idChecked"
                />
                ID
              </div>
            </div>
            <div class="col-sm-8">
              <div class="form-group">
                <input
                  type="text"
                  class="form-control"
                  id="id"
                  name="id"
                  placeholder="ID"
                />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-2">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  name="idChecked"
                />
                Name
              </div>
            </div>
            <div class="col-sm-8">
              <div class="form-group">
                <input
                  type="text"
                  class="form-control"
                  id="id"
                  name="id"
                  placeholder="Name"
                />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-2">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  name="booleanChecked"
                />Members
              </div>
            </div>
            <div class="form-group col-md-3">
              <select class="form-control" name="boolean" id="boolean">
                <option>Choose members...</option>
                <% members.forEach(member => { %>
                <option value="<%= member.firstname %>"
                  ><%= member.firstname + ' ' + member.lastname %></option
                >
                <% }) %>
              </select>
            </div>
          </div>
          <button type="submit" class="btn btn-primary">Search</button>
          <a href="/projects" class="btn btn-info">Reset</a>
        </div>
      </form>
      <br />
      <form action="/projects/column" method="GET">
        <div class="container">
          <h2>Options</h2>
          <div class="row">
            <div class="col-sm-2">
              <p>Columns</p>
            </div>
            <div class="col-sm-2">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="idChecked"
                <%= options.idChecked == 'on' ? 'checked' : '' %> /> ID
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox"
                name="nameChecked" <%= options.nameChecked == 'on' ? 'checked' :
                '' %> /> Name
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox"
                name="memberChecked" <%= options.memberChecked == 'on' ?
                'checked' : '' %> /> Members
              </div>
            </div>
          </div>
          <button type="submit" class="btn btn-warning">Apply</button>
        </div>
      </form>
      <br />
      <table class="table table-striped">
        <thead>
          <% if (options.idChecked == 'on') { %>
          <th scope="col">ID</th>
          <% } %> <% if (options.nameChecked == 'on') { %>
          <th scope="col">Name</th>
          <% } %> <% if (options.memberChecked == 'on') { %>
          <th scope="col">Members</th>
          <% } %>
          <th scope="col"></th>
        </thead>
        <tbody>
          <% projects.forEach(project => { %>
          <tr>
            <% if (options.idChecked == 'on') { %>
            <th scope="row"><%= project.projectid %></th>
            <% } %> <% if (options.nameChecked == 'on') { %>
            <td><%= project.projectname %></td>
            <% } %> <% if (options.memberChecked == 'on') { %>
            <td>
              <% for (let i = 0; i < projectmember.length; i++) { %>
                <% if (project.projectname == projectmember[i].projectname) { %>
                  <%= projectmember[i].firstname + ' ' + projectmember[i].lastname %>.
                <% } %>
              <% } %>
            </td>
            <% } %>
            <td>
              <a href="/projects/edit/<%= project.projectid %>">
                <button type="button" class="btn btn-success">
                  Edit
                </button>
              </a>
              <a
                href="/projects/delete/<%= project.projectid %>"
                style="color: white"
                onclick="return confirm('Delete ?')"
              >
                <button type="button" class="btn btn-danger">
                  Delete
                </button>
              </a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <a href="add" class="btn btn-secondary">Add</a>
    </div>
  </body>
</html>
